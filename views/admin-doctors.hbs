<html>
<head>
    <title>Med-Aid</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/card.css">
    <link rel="stylesheet" href="css/view-doctors.css">
    <link rel="stylesheet" href="css/admin.css">

    <!-- JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    
</head>
<body>
    {{> nav}}

    <div class="container">
        <div class="row content">
            <div class="col-4 filter">
                <input type="text" class="search pl-3 clinic-search" placeholder="Search"/>
                
                <form action="" style="text-align: left;">
                    <h1>Field</h1>
                    <input type="radio" id="field1" name="field" value="field1">
                    <label for="field1">Field 1</label><br>
                    <input type="radio" id="field2" name="field" value="field2">
                    <label for="field2">Field 2</label><br>
                    <input type="radio" id="field3" name="field" value="field3">
                    <label for="field3">Field 3</label>
                  
                    <br>
                  
                    <h1>Clinic</h1>
                    {{#each clinics}}
                    <input type="radio" id="{{_id}}" value="{{_id}}">
                    <label for="{{_id}}">{{clinicName}}</label><br>
                    {{/each}}
                </form>
            </div>
            <div class="col">
                <div class="row options">
                    <a href="/adminPending" value= "pending" id="pending">pending</a>
                    <a href="/adminDoctors" value="doctors" id="doctors">doctors</a>
                    <a href="/adminClinics" value= "clinics" id="clinics">clinics</a>
                </div>
                
                {{#each doctors}}
                <a href="/doctorProfile?id={{_id}}">
                    <div class="row d-flex flex-wrap">
                        <div class="row no-gutters admin-card">
                            <img class="card-img" src="{{profpic}}">
                            <div class="card-body">
                                <h5 class="card-title">{{firstname}} {{lastname}}</h5>
                                {{!-- <p class="card-text">Clinic</p> --}}
                            </div>
                        </div>
                    </div>
                </a>
                {{/each}}

            </div>
        </div>
    </div>
</body>
</html>