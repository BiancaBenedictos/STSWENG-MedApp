<html>
<head>
    <title>Med-Aid</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/card.css">
    <link rel="stylesheet" href="css/view-doctors.css">
    <link rel="stylesheet" href="css/admin.css">

    <!-- JS and jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    
    <script src="/scripts/admin-pending.js"></script>

</head>
<body>
    {{> nav}}
    
    <div class="container">
        <div class="row content d-flex flex-wrap">
            <div class="col-4 filter">
                <img src="assets/black.png">
                <h1 class="heading">{{user.firstname}} {{user.lastname}}</h1>
                <p>Admin</p>
                {{!-- <a href="/login" class="btn edit-btn">logout</a> --}}
            </div>
            <div class="col">
                <div class="row options">
                    <a href="/adminPending" value= "pending" id="pending">pending</a>
                    <a href="/adminDoctors" value="doctors" id="doctors">doctors</a>
                    <a href="/adminClinics" value= "clinics" id="clinics">clinics</a>
                </div>

                {{#each doctors}}
                <div class="row d-flex flex-wrap mt-4">
                    <div class="row no-gutters admin-card">
                        <img class="card-img" src="assets/black.png">
                        <div class="card-body">
                            <h5 class="card-title">{{firstname}} {{lastname}}</h5>
                            <p class="card-text">Clinic</p>
                        </div>
                        <div class="card-body cancel">
                            <button class="btn btn-link" data-toggle="modal" data-target="#accept" onclick="setId('{{_id}}');setClinics('{{clinics}}')">
                                <img src="assets/check.svg" class="icon">
                            </button>
                            <button class="btn btn-default" data-toggle="modal" data-target="#reject" onclick="setId('{{_id}}')">
                                <img src="assets/clear.svg" class="icon">
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</body>
</html>

<!-- Confirmation Modal -->
<div class="modal fade" id="accept" tabindex="-1" role="dialog" aria-labelledby="accept" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header del-header">
                Are you sure?
            </div>
            <div class="modal-body del-body">
                Are you sure you want to accept this application?
            </div>
            <div class="modal-footer del-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <a class="btn btn-success" onclick="acceptDoctor()">Yes</a>
            </div>
        </div>
    </div>
</div>

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="reject" tabindex="-1" role="dialog" aria-labelledby="reject" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header del-header">
                Are you sure?
            </div>
            <div class="modal-body del-body">
                Are you sure you want to reject this application? This action cannot be undone.
            </div>
            <div class="modal-footer del-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="unsetId()">No</button>
                <a class="btn btn-danger" onclick="rejectDoctor()">Yes</a>
            </div>
        </div>
    </div>
</div>