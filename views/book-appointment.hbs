<html>
<head>
    <title>Med-Aid</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/card.css">
    <link rel="stylesheet" href="css/view-doctors.css">
    <link rel="stylesheet" href="css/admin.css">

    <!-- JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    
</head>
<body>
    {{> nav}}
    
    <div class="container">
        <div class="row content d-flex flex-wrap">
            <div class="col-4 filter">
                <img src="assets/black.png">
                <h1 class="heading">{{firstname}} {{lastname}}</h1>
                <p>{{profession}}</p>
                
                {{#each clinics}}
                <p>
                    <b>{{clinicName}}</b>
                    <br>
                    <i>{{clinicAddress.street}}, {{clinicAddress.city}}, {{clinicAddress.state}}</i>
                </p>
                {{/each}}
            </div>
            <div class="col">
                <div class="row appointments week justify-content-center">
                    <span class="heading">November<br>
                        <button class="day" value="Sunday">15</button>
                        <button class="day active" value="Monday">16</button>
                        <button class="day" value="Tuesday">17</button>
                        <button class="day" value="Wednesday">18</button>
                        <button class="day" value="Thursday">19</button>
                        <button class="day" value="Friday">20</button>
                        <button class="day" value="Saturday">21</button>
                    </span>
                </div>
                <div class="row justify-content-center">
                </div>
                <div class="row timeslots flex-wrap">
                    <button class="time" data-toggle="modal" data-target="#confirm">12:00 PM</button>
                    {{!-- <button class="time">12:30 PM</button>
                    <button class="time">1:00 PM</button>
                    <button class="time">1:30 PM</button>
                    <button class="time">2:00 PM</button>
                    <button class="time">2:30 PM</button>
                    <button class="time">3:00 PM</button>
                    <button class="time">3:30 PM</button>
                    <button class="time">4:00 PM</button>
                    <button class="time">4:30 PM</button>
                    <button class="time">5:00 PM</button>
                    <button class="time">5:30 PM</button>
                    <button class="time">6:00 PM</button> --}}
                </div>
        </div>
    </div>
</body>
</html>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="confirm" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header del-header">
                Are you sure?
            </div>
            <div class="modal-body del-body">
                Are you sure you want to book an appointment for 12:00 PM?
            </div>
            <div class="modal-footer del-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <a class="btn btn-success">Yes</a>
            </div>
        </div>
    </div>
</div>