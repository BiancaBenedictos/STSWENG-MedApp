<html>
<head>
    <title>Med-Aid</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/card.css">

    <!-- JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    
</head>
<body>
    {{> nav}}

    <div class="container-fluid">
        <div class="row tabs">
            <a href="/" value="doctors" id="doctors">doctors</a>
            <a href="/homeClinics" value= "clinics" id="clinics">clinics</a>
            <!-- <a href="#" value= "others" id="others">others</a> -->
        </div>

        <div class="row d-flex justify-content-center flex-wrap">
            {{#each clinics}}
            <div class="card">
                <a href="/viewDoctors?id={{_id}}" style="text-align:center">
                    <img class="card-img-top ml-auto" src="assets/black.png">
                    <h5 class="card-title card-title-home">{{clinicName}}</h5></a>
                    <div class="card-body card-body-home">
                        <p class="card-text"><i>{{clinicAddress.street}}, {{clinicAddress.city}}, {{clinicAddress.state}}</i></p>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</body>
</html>