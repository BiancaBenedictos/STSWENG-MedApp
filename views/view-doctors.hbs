<html>
<head>
    <title>Med-Aid</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/nav.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/card.css">
    <link rel="stylesheet" href="css/view-doctors.css">
    <link rel="stylesheet" href="css/admin.css">

    <!-- JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    
</head>
<body>
    {{> nav}}
    
    <div class="container">
        <div class="row content d-flex flex-wrap">
            <div class="col-4 filter">
                <form action="" style="text-align:left;">
                    <h1>Field</h1>
                    <input type="radio" id="field1" name="field" value="field1">
                    <label for="field1">Field 1</label><br>
                    <input type="radio" id="field2" name="field" value="field2">
                    <label for="field2">Field 2</label><br>
                    <input type="radio" id="field3" name="field" value="field3">
                    <label for="field3">Field 3</label>
                </form>
            </div>
            <div class="col">
                <div class="row view">
                    <h1 class="heading">{{clinic}}</h1>
                </div>
                <div class="row timeslots flex-wrap">
                    {{#each doctors}}
                    <a href="/doctorProfile?id={{_id}}" class="card-long">
                        <div class="row no-gutters">
                            <img class="card-img" src="assets/black.png">
                            <div class="card-body">
                                <h5 class="card-title">{{firstname}} {{lastname}}</h5>
                                <p class="card-text">{{profession}}</p>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>
</html>